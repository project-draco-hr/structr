{
  StringBuilder path=new StringBuilder();
  String base=StructrConnector.getServer();
  path.append(base);
  if (!base.endsWith("/")) {
    path.append("/");
  }
  path.append(url);
  for (  Object o : params) {
    if (o.getClass().isArray()) {
      Object[] array=(Object[])o;
      for (      Object a : array) {
        path.append(a);
      }
    }
 else {
      path.append(o);
    }
  }
  return path.toString();
}
