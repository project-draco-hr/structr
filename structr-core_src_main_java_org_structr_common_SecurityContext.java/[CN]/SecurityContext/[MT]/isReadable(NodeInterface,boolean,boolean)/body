{
  if ((node.isDeleted() || node.isHidden()) && !includeDeletedAndHidden) {
    return false;
  }
  if (node.isVisibleToPublicUsers()) {
    return true;
  }
  if (publicOnly) {
    return false;
  }
  if (node.isVisibleToAuthenticatedUsers() && getUser(false) != null) {
    return true;
  }
  return isAllowed(node,Permission.read);
}
