{
  Services.getInstance().shutdown();
  try {
    File testDir=new File(basePath);
    if (testDir.isDirectory()) {
      FileUtils.deleteDirectory(testDir);
    }
 else {
      testDir.delete();
    }
  }
 catch (  Throwable t) {
    t.printStackTrace();
  }
  super.tearDown();
  System.out.println("######################################################################################");
  System.out.println("# " + getClass().getSimpleName() + "#"+ getName()+ " finished.");
  System.out.println("######################################################################################\n");
}
