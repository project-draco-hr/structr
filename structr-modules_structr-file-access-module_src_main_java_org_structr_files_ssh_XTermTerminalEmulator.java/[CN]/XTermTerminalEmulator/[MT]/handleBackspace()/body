{
  if (echo) {
    if (cursorPosition > 0) {
      if (cursorPosition < lineLength) {
        writer.write(8);
        handleDelete();
      }
 else {
        writer.write(8);
        writer.write(' ');
        writer.write(8);
        if (cursorPosition > 0) {
          cursorPosition--;
        }
        lineBuffer.deleteCharAt(cursorPosition);
      }
    }
  }
 else {
    if (cursorPosition > 0) {
      cursorPosition--;
      lineBuffer.deleteCharAt(cursorPosition);
    }
  }
  lineLength=lineBuffer.length();
}
