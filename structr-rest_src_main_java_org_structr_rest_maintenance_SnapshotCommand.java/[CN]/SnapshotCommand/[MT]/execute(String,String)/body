{
  if (mode != null) {
switch (mode) {
case "export":
      createSnapshot(name);
    break;
case "restore":
  restoreSnapshot(name);
break;
case "add":
addSnapshot(name);
break;
case "delete":
deleteSnapshot(name);
break;
default :
throw new FrameworkException(422,"Invalid mode supplied, valid values are export, restore, add or delete.");
}
}
 else {
throw new FrameworkException(500,"No snapshot mode supplied, aborting.");
}
}
