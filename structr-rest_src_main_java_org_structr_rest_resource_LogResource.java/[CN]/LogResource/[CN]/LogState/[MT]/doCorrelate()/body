{
  if (StringUtils.isNotBlank(correlate)) {
    final String[] parts=correlate.split(CORRELATION_SEPARATOR);
    if (parts.length > 0) {
      correlationAction=parts[0];
    }
    if (parts.length > 1) {
      correlationOp=parts[1];
    }
    if (parts.length > 2) {
      correlationPattern=Pattern.compile(parts[2]);
    }
    return true;
  }
  return false;
}
