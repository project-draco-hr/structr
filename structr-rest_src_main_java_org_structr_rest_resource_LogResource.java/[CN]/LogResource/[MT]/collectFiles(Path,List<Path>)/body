{
  try (final DirectoryStream<Path> stream=Files.newDirectoryStream(dir,"*")){
    for (    final Path p : stream) {
      if (Files.isDirectory(p)) {
        collectFiles(p,files);
      }
 else {
        files.add(p);
      }
    }
  }
 catch (  IOException ioex) {
    ioex.printStackTrace();
  }
}
