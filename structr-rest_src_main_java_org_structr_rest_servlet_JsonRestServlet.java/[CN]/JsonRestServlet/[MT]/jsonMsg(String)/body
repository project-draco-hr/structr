{
  StringBuilder buf=new StringBuilder(100);
  buf.append("{\n");
  if (message != null) {
    buf.append("    \"message\" : \"").append(StringUtils.replace(message,"\"","\\\"")).append("\"\n");
  }
 else {
    buf.append("    \"message\" : \"\"\n");
  }
  buf.append("}\n");
  return buf.toString();
}
