{
  Services.getInstance().shutdown();
  File testDir=new File(basePath);
  int count=0;
  while (testDir.exists() && count++ < 10) {
    try {
      if (testDir.isDirectory()) {
        FileUtils.deleteDirectory(testDir);
      }
 else {
        testDir.delete();
      }
    }
 catch (    Throwable t) {
    }
    try {
      Thread.sleep(500);
    }
 catch (    Throwable t) {
    }
  }
  super.tearDown();
}
