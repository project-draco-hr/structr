{
  final long abortTime=System.currentTimeMillis() + timeout;
  while (!authenticated) {
    if (System.currentTimeMillis() > abortTime) {
      throw new FrameworkException(504,"Timeout while waiting for authentication.");
    }
    try {
      Thread.sleep(10);
    }
 catch (    Throwable t) {
    }
  }
}
