{
  while (connection.isConnected()) {
    try {
      final Message message=(Message)inputStream.readObject();
      if (message != null) {
        if (CloudService.DEBUG) {
          System.out.println("Receiver: " + message);
        }
        inputQueue.add(message);
      }
    }
 catch (    Throwable t) {
      errorMessage=t;
      connection.shutdown();
    }
  }
}
