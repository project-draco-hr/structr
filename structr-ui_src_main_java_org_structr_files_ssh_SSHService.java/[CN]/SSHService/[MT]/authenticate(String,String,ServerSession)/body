{
  boolean isValid=false;
  try (final Tx tx=StructrApp.getInstance().tx()){
    final Principal principal=AuthHelper.getPrincipalForPassword(AbstractNode.name,username,password);
    if (principal != null) {
      isValid=true;
    }
    tx.success();
  }
 catch (  Throwable t) {
    t.printStackTrace();
    isValid=false;
  }
  return isValid;
}
