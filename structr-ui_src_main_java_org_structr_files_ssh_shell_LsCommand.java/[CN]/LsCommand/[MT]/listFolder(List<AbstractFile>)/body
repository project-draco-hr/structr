{
  for (  final AbstractFile child : folder) {
    if (child instanceof Folder) {
      term.setBold(true);
      term.setTextColor(4);
      term.print(child.getName() + "  ");
      term.setTextColor(7);
      term.setBold(false);
    }
 else {
      term.print(child.getName() + "  ");
    }
  }
  if (!folder.isEmpty()) {
    term.println();
  }
}
