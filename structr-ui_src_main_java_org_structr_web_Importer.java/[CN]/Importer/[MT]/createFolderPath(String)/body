{
  if (path == null) {
    return null;
  }
  String[] parts=StringUtils.split(path,"/");
  Folder folder=null;
  for (  String part : parts) {
    Folder parent=folder;
    folder=findOrCreateFolder(part);
    if (parent != null) {
      createRel.execute(parent,folder,Folders.class);
    }
    folder.updateInIndex();
  }
  return folder;
}
