{
  OAuthClientRequest oauthClientRequest=OAuthClientRequest.authorizationLocation(authorizationLocation).setClientId(clientId).setRedirectURI(getAbsoluteRedirectUri(request,redirectUri)).setScope(getScope()).setResponseType(getResponseType()).buildQueryMessage();
  logger.log(Level.INFO,"Authorization request location URI: {0}",oauthClientRequest.getLocationUri());
  return oauthClientRequest;
}
