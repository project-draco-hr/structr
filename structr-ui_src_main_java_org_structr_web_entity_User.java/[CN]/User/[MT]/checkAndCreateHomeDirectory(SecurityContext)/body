{
  if ("true".equals(StructrApp.getConfigurationValue(Services.APPLICATION_FILESYSTEM_ENABLED,"false"))) {
    Folder homeDir=getProperty(User.homeDirectory);
    if (homeDir == null) {
      final App app=StructrApp.getInstance(securityContext);
      Folder homeFolder=app.nodeQuery(Folder.class).and(Folder.name,"home").getFirst();
      if (homeFolder == null) {
        homeFolder=app.create(Folder.class,new NodeAttribute(Folder.name,"home"),new NodeAttribute(Folder.owner,null));
      }
      app.create(Folder.class,new NodeAttribute(Folder.name,getUuid()),new NodeAttribute(Folder.parent,homeFolder),new NodeAttribute(Folder.homeFolderOfUser,this));
    }
  }
}
