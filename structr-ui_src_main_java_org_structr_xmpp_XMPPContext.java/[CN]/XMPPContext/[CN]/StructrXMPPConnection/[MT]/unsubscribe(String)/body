{
  if (isConnected) {
    try {
      final Presence presence=new Presence(Presence.Type.unsubscribe);
      presence.setTo(to);
      connection.sendStanza(presence);
    }
 catch (    NotConnectedException nex) {
      throw new FrameworkException(422,"Not connected");
    }
  }
 else {
    throw new FrameworkException(422,"Not connected");
  }
}
