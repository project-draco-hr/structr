{
  final File testDir=new File(Services.getInstance().getConfigurationValue(Services.BASE_PATH));
  Services.getInstance().shutdown();
  try {
    if (testDir.isDirectory()) {
      FileUtils.deleteDirectory(testDir);
    }
 else {
      testDir.delete();
    }
  }
 catch (  Throwable t) {
  }
  super.tearDown();
}
