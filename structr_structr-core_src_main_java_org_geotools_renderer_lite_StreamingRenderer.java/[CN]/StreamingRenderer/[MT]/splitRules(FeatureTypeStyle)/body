{
  Rule[] rules;
  List<Rule> ruleList=new ArrayList<Rule>();
  List<Rule> elseRuleList=new ArrayList<Rule>();
  rules=fts.getRules();
  ruleList=new ArrayList();
  elseRuleList=new ArrayList();
  for (int j=0; j < rules.length; j++) {
    Rule r=rules[j];
    if (isWithInScale(r)) {
      if (r.isElseFilter()) {
        elseRuleList.add(r);
      }
 else {
        ruleList.add(r);
      }
    }
  }
  return new List[]{ruleList,elseRuleList};
}
