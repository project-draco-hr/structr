{
  if (isRunning()) {
    this.run=false;
    this.setPriority(Thread.MAX_PRIORITY);
    try {
      flushQueue();
    }
 catch (    FrameworkException fex) {
      logger.log(Level.WARNING,"Unable to flush log queue",fex);
    }
    try {
      sleep(1000);
      this.interrupt();
    }
 catch (    Throwable t) {
    }
  }
}
