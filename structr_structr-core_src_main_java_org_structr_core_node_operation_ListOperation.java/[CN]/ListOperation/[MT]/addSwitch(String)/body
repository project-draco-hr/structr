{
  if (switches.startsWith("-") && switches.length() > 1) {
    String sw=switches.substring(1);
    int len=sw.length();
    for (int i=0; i < len; i++) {
      char ch=sw.charAt(i);
switch (ch) {
case 'r':
        recursive=true;
      break;
default :
    throw new InvalidSwitchException("Invalid switch " + ch);
}
}
}
 else {
throw new InvalidSwitchException("Invalid switch " + switches);
}
}
