{
  final Font font=item.getTextStyle().getFont();
  final char[] chars=label.toCharArray();
  final int length=label.length();
  if (Bidi.requiresBidi(chars,0,length) && new Bidi(label,Bidi.DIRECTION_DEFAULT_LEFT_TO_RIGHT).isRightToLeft())   return font.layoutGlyphVector(graphics.getFontRenderContext(),chars,0,length,Font.LAYOUT_RIGHT_TO_LEFT);
 else   return font.createGlyphVector(graphics.getFontRenderContext(),chars);
}
