{
  int sublevel=0;
  List<AbstractNode> ancestors=getAncestorNodes();
  for (  AbstractNode n : ancestors) {
    if ((n instanceof Site) || (n instanceof Domain)) {
      break;
    }
    sublevel++;
  }
  StringBuilder path=new StringBuilder();
  for (int i=0; i < sublevel; i++) {
    path.append("../");
  }
  return path.toString();
}
