{
  StringBuilder buf=new StringBuilder(100);
  buf.append("{\n");
  buf.append("    \"error\" : {\n");
  buf.append("        \"code\" : ").append(code);
  if (message != null) {
    buf.append(",\n        \"message\" : \"").append(message).append("\"\n");
  }
 else {
    buf.append("\n");
  }
  buf.append("    }\n");
  buf.append("}\n");
  return buf.toString();
}
