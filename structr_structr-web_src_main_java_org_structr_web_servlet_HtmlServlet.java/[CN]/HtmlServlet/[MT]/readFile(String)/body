{
  StringBuilder content=new StringBuilder();
  try {
    BufferedReader reader=new BufferedReader(new FileReader(path));
    String line=null;
    do {
      line=reader.readLine();
      if (line != null) {
        content.append(line);
        content.append("\n");
      }
    }
 while (line != null);
  }
 catch (  Throwable t) {
    t.printStackTrace();
  }
  return content.toString();
}
